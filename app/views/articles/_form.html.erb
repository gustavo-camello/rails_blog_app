<%= render 'shared/errors', obj: @article %>

<%= form_with(model: @article, local: true) do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.label :category %><br>
    <%= f.collection_select(:category_ids, Category.all, :id, :name, { prompt: "make your selection"},
    { multiple: true, size: 3, class: "custom-select" }) %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>
