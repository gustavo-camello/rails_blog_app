<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3" >Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <% if article.user %>
          <td>by <%= link_to article.user.username, user_path(article.user) %></th>
        <% end %>
        <td><%= article.title %></th>
        <td><%= article.description %></th>
        <td><%= link_to 'Show', article_path(article) %></td>
        <% if logged_in? && article.user == current_user %>
          <td><%= link_to 'Edit', edit_article_path(article) %></td>
          <td><%= link_to 'Delete', article_path(article), method: :delete, data: { confirm: "Are you sure? " } %> </th>
        <% end %>
        <tr>
    <% end %>
  </tbody>

</table>
